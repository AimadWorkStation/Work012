extends layout

block content
	.container.text-center
		h1 #{article.title}
		p whriten by #{author}
		p= article.body
		hr
		if user
			if user._id == article.author
				a.btn.btn-default(href='/articles/edit/'+article._id) Edit
				a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete