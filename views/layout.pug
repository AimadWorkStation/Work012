doctype html
html
	head
		title myapp
		link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet' href='/css/style.css')
	body
		nav.navbar.navbar-inverse.bg-light
			.container
				ul.nav.navbar-nav
					li
						a.navbar-brand(href='/') Mystock
					li
						a.navbar-brand(href='/articles/add') Add Article
				ul.nav.navbar-nav.navbar-right
					if user
						li
							a.navbar-brand(href='/users/logout') Logout
					else 
						li
							a.navbar-brand(href='/users/Login') Login 
						li
							a.navbar-brand(href='/users/Register') Register

		.container
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger")= error.msg
			block content
			br
			hr
			footer
				p Copyright &copy; 2017
		script(src='/bower_components/jquery/dist/jquery.min.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
		script(src='/js/main.js')





		
		
