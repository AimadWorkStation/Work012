extends layout

block content
	h1.text-center Register
	form.w-50.m-auto(method='POST', action='/users/register')
		#form-group
			label Name :
			input.form-control(name='name', type='text')
		#form-group
			label Email :
			input.form-control(name='email', type='email')
		#form-group
			label Username :
			input.form-control(name='username', type='text')
		#form-group
			label Password :
			input.form-control(name='password', type='password')
		#form-group
			label Confirm :
			input.form-control(name='password2', type='password')
		input.btn.btn-primary(type='submit', value='submit')